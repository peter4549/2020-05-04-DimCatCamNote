<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@color/colorAmberfff8e1"
    android:layout_margin="64dp">

    <LinearLayout
        android:id="@+id/by_creation_time"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="생성 시간 순으로 정렬"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/by_edit_time"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/by_creation_time"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="수정 시간 순으로 정렬"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/by_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@id/by_edit_time"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="이름 순으로 정렬"/>

    </LinearLayout>

</RelativeLayout>