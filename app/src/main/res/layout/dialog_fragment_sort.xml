<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/colorAmberfff8e1">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="정렬"
        android:textSize="@dimen/text_size_middle_large"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/by_edit_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/text_view_title"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            style="@style/ImageViewStyleSmallSize"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_edit_white_24dp"
            android:tint="@color/colorStatusIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="수정시간 순으로 정렬"
            android:textSize="@dimen/text_size_middle"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/by_creation_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/by_edit_time"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/image_view_lock"
            style="@style/ImageViewStyleSmallSize"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_access_time_white_24dp"
            android:tint="@color/colorStatusIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="생성시간 순으로 정렬"
            android:textSize="@dimen/text_size_middle"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/by_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_below="@id/by_creation_time"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            style="@style/ImageViewStyleSmallSize"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_sort_by_alpha_24dp"
            android:tint="@color/colorStatusIcon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="이름 순으로 정렬"
            android:textSize="@dimen/text_size_middle"/>

    </LinearLayout>

</RelativeLayout>