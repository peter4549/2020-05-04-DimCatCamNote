<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/calendar_header_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:background="@color/colorAmberfff8e1"
            android:clickable="true"
            android:focusable="true">

            <Button
                android:id="@+id/button_previous_month"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="이전"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/calendar_header"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/colorLime50"
                android:text="test"/>

            <Button
                android:id="@+id/button_next_month"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="앞"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/day_of_week_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/calendar_header_container"
            android:background="@color/colorPurplef3e5f5">

            <TextView
                style="@style/DayOfWeekTextViewStyle"
                android:text="일"/>
            <TextView
                style="@style/DayOfWeekTextViewStyle"
                android:text="월"/>
            <TextView
                style="@style/DayOfWeekTextViewStyle"
                android:text="화"/>
            <TextView
                style="@style/DayOfWeekTextViewStyle"
                android:text="수"/>
            <TextView
                style="@style/DayOfWeekTextViewStyle"
                android:text="목"/>
            <TextView
                style="@style/DayOfWeekTextViewStyle"
                android:text="금"/>
            <TextView
                style="@style/DayOfWeekTextViewStyle"
                android:text="토"/>

        </LinearLayout>


        <GridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/day_of_week_container"
            android:numColumns="7"
            android:background="@color/colorAmberfff8e1"/>

    </RelativeLayout>


</layout>
