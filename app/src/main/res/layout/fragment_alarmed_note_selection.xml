<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/alarmed_note_selection_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey606060Alpha80"
        android:clickable="true"
        android:focusable="true"
        tools:context=".fragments.AlarmedNoteSelectionFragment">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="512dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/backgroundColorAddContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_date"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@id/text_view_date"
                android:text="알림 설정된 노트들"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <RelativeLayout
                android:id="@+id/add_container"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@id/text_view"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/text_view_add"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="노트 추가"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:background="@color/backgroundColorDayOfWeek" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_add_circle_white_24dp"/>

            </RelativeLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/add_container"
                android:background="@color/colorLime50"
                android:scrollbars="vertical" />

        </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</layout>