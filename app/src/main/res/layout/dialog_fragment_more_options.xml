<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/more_options_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/defaultColorBackground">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/defaultColorToolbar"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="1" />

    <TextView
        android:id="@+id/text_view_add_to_calendar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="캘린더에 등록"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_today_white_24dp"
        android:drawableTint="@color/colorStatusIcon"
        android:foreground="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/text_view_move_to_folder"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="폴더로 이동"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_folder_white_24dp"
        android:drawableTint="@color/colorStatusIcon"
        android:foreground="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/text_view_lock"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="노트 잠금"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:drawableTint="@color/colorStatusIcon"
        android:foreground="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/text_view_share"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="공유하기"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_share_24dp"
        android:drawableTint="@color/colorStatusIcon"
        android:foreground="?attr/selectableItemBackground"/>

    <TextView
        android:id="@+id/text_view_add_to_status_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="상태바에 등록"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_pin_white_24dp"
        android:drawableTint="@color/colorStatusIcon"
        android:foreground="?attr/selectableItemBackground"/>

</LinearLayout>