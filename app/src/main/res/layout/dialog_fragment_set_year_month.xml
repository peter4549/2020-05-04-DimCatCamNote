<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_year_month_container"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@color/defaultColorBackground">

    <LinearLayout
        android:id="@+id/year_spinner_container"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <Spinner
            android:id="@+id/year_spinner"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:theme="@style/SpinnerTheme"/>

        <TextView
            android:id="@+id/text_view_year_spinner"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="년"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/text_size_middle"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/month_spinner_container"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/year_spinner_container"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:background="@android:color/white">

        <Spinner
            android:id="@+id/month_spinner"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:theme="@style/SpinnerTheme"/>

        <TextView
            android:id="@+id/text_view_month_spinner"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="월"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/text_size_middle"/>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/year_spinner_container"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:background="@color/defaultColorToolbar"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_middle"
        android:textStyle="bold"/>

</RelativeLayout>