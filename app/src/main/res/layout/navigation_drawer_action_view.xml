<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.elliot.kim.kotlin.dimcatcamnote.activities.MainActivity"
    android:id="@+id/navigation_action_view"
    android:layout_width="256dp"
    android:layout_height="@dimen/nav_drawer_menu_item_height"
    android:orientation="vertical"
    android:background="@color/backgroundColorAddContainer"
    android:clickable="true"
    android:focusable="true"
    android:contentInsetStart="0dp"
    android:contentInsetLeft="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/icon_view"/>

</RelativeLayout>


