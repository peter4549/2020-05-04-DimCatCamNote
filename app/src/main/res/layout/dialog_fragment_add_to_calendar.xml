<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_to_calendar_container"
    android:layout_width="260dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/request_select_date"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_view_selected_date"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_view_title"
        android:layout_marginTop="12dp"
        android:text="선택한 날짜"
        android:textSize="@dimen/text_size_small_middle"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/button_set_date"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_view_selected_date"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_middle"/>

    <Button
        android:id="@+id/button_register"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/button_set_date"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_centerInParent="true"
        android:text="등록하기"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_middle"/>

</RelativeLayout>