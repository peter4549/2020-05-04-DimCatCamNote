<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_fragment_container"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/defaultColorBackground">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/defaultColorToolbar"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/text_view_message"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/text_view_title"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="폴더를 삭제합니다.\n폴더의 노트는 어떻게 하시겠습니까?"
        android:textSize="@dimen/text_size_middle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/text_view_message"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_remain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@color/defaultColorToolbar"
            android:text="기본 폴더로 이동"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_middle"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@color/defaultColorToolbar"
            android:text="모두 삭제"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_middle"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>