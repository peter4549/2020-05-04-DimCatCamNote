<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" >

    <LinearLayout
        android:id="@+id/linear_layout_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/colorYellowfff176"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:maxEms="10"
            android:maxLines="1"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/image_view_container"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_done"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription=""
                android:src="@drawable/ic_done_white_24dp"
                android:visibility="gone"
                android:tint="@color/colorStatusIcon"/>

            <ImageView
                android:id="@+id/image_view_alarm"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription=""
                android:src="@drawable/ic_alarm_on_white_24dp"
                android:visibility="gone"
                android:tint="@color/colorStatusIcon"/>

            <ImageView
                android:id="@+id/image_view_lock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription=""
                android:src="@drawable/ic_lock_outline_black_24dp"
                android:visibility="gone"
                android:tint="@color/colorStatusIcon"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_layout_tool_bar"
        android:background="@color/colorAddWidgetTextViewContent"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>